<Window x:Class="Othello.MainWindow"
        xmlns:View="clr-namespace:Othello.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello"
        mc:Ignorable="d"
        Title="Othello" Width="640" Height="480">
    <DockPanel Background="LightGray">
        <Grid DockPanel.Dock="Right">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <View:PlayerInfo Grid.Row="0" Mark="Black"/>
            <View:PlayerInfo Grid.Row="1" Mark="White"/>
        </Grid>
        <View:Board Margin="10"/>
    </DockPanel>
</Window>
