<UserControl x:Class="Othello.View.PlayerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Othello.View"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="OthelloDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <Ellipse x:Name="MarkEllipse"
                 Style="{DynamicResource ResourceKey=MarkDesign}"
                 Stroke="Black"
                 StrokeThickness="3"
                 Margin="20,10,20,0"/>
        <!--
        AIは後から実装する
        <ComboBox Margin="20,10,20,0"/>
        <Button Content="PLAY"
                Margin="20,10,20,0"/>
        <CheckBox Content="Auto Play"
                  Margin="20,10,20,0"/>
        -->
    </StackPanel>
</UserControl>
