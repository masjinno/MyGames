<UserControl x:Class="TicTacToe.View.PlayerInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe.View"
             mc:Ignorable="d">
    <StackPanel>
        <TextBlock x:Name="PlayerMarkTextBlock"
                   Text="{Binding Path=Mark}"
                   Margin="20,20,20,0"
                   FontSize="98"
                   FontWeight="Bold"
                   FontFamily="MS Gothic"/>
        <Rectangle Height="10"
                   Fill="Black"
                   Margin="20,0"/>
        <ComboBox Margin="20,10,20,0"/>
        <Button Content="PLAY"
                Margin="20,10,20,0"/>
        <CheckBox Content="Auto Play"
                  Margin="20,10,20,0"/>
    </StackPanel>
</UserControl>
