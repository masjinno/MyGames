<Window xmlns:View="clr-namespace:TicTacToe.View"
        x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="TicTacToe" Width="640" Height="480">
    <DockPanel>
        <DockPanel.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF80FF80"/>
                <GradientStop Color="#FF004000" Offset="1"/>
            </LinearGradientBrush>
        </DockPanel.Background>
        <Grid DockPanel.Dock="Bottom">
            <Button Content="Reset"
                    Width="90"
                    Margin="0,20"
                    FontSize="18"/>
        </Grid>
        <View:PlayerInfo DockPanel.Dock="Left" Width="140" Mark="○"/>
        <View:PlayerInfo DockPanel.Dock="Right" Width="140" Mark="✕"/>
        <View:Board Margin="0,20,0,0"/>
    </DockPanel>
</Window>
